     RENDER HELPERS
  ============================================================= */
  function el(html){
    const t=document.createElement('template');
    t.innerHTML=html.trim();
    return t.content.firstElementChild;
  }

  function renderFilmCard(film){
    const loc=film.locations?.[0]?`Shot in ${film.locations[0]}`:"";
    return el(`
      <article class="card" data-type="film" data-id="${film.id}">
        <div class="card-media">${film.image?`<img src="${film.image}" alt="Poster for ${film.title}">`:""}</div>
        <div class="card-content">
          <h3 class="card-title">${film.title}</h3>
          <div class="card-meta">${film.year}${loc?` ‚Ä¢ ${loc}`:""}</div>
          <p class="card-desc">${film.synopsis}</p>
          <div class="card-actions"><a href="#" data-detail-link="${film.id}" data-type="film">Learn more ‚Üí</a></div>
        </div>
      </article>`);
  }

  function renderPersonCard(person){
    return el(`
      <article class="card" data-type="person" data-id="${person.id}">
        <div class="card-media">${person.image?`<img class="person-card-media" src="${person.image}" alt="${person.name}">`:""}</div>
        <div class="card-content">
          <h3 class="card-title">${person.name}</h3>
          <div class="card-meta">${person.role||""}</div>
          <p class="card-desc">${person.bio||""}</p>
          <div class="card-actions"><a href="#" data-detail-link="${person.id}" data-type="person">View profile ‚Üí</a></div>
        </div>
      </article>`);
  }

  function renderResourceCard(res){
    return el(`
      <article class="card" data-type="resource" data-id="${res.id}">
        <div class="card-content">
          <h3 class="card-title">${res.icon||""} ${res.title}</h3>
          <p class="card-desc">${res.desc||""}</p>
          <div class="card-actions"><a href="${res.url}">Learn more ‚Üí</a></div>
        </div>
      </article>`);
  }

  /* =============================================================
     POPULATE INITIAL GRIDS
  ============================================================= */
  function populateGrids(){
    const fwrap=document.getElementById('filmGrid');
    const pwrap=document.getElementById('peopleGrid');
    const rwrap=document.getElementById('resourceGrid');
    fwrap.innerHTML="";films.forEach(f=>fwrap.appendChild(renderFilmCard(f)));
    pwrap.innerHTML="";people.forEach(p=>pwrap.appendChild(renderPersonCard(p)));
    rwrap.innerHTML="";resources.forEach(r=>rwrap.appendChild(renderResourceCard(r)));
  }

  /* =============================================================
     SIMPLE SEARCH
     - Case-insensitive substring match across selected type
     - Returns arrays of matching films/people
  ============================================================= */
  function searchData(query,type='all'){
    const q=query.trim().toLowerCase();
    if(!q) return {films:[],people:[]};
    const filmMatches=films.filter(f=>{
      if(type!=='all' && type!=='film') return false;
      const hay=[f.title,f.synopsis,...(f.locations||[])]\n        .join(' ').toLowerCase();
      return hay.includes(q);
    });
    const peopleMatches=people.filter(p=>{
      if(type!=='all' && type!=='person') return false;
      const hay=[p.name,p.role,p.bio].join(' ').toLowerCase();
      return hay.includes(q);
    });
    return {films:filmMatches,people:peopleMatches};
  }

  function renderSearchResults(res){
    const fwrap=document.getElementById('filmGrid');
    const pwrap=document.getElementById('peopleGrid');
    fwrap.innerHTML="";pwrap.innerHTML="";

    if(res.films.length){res.films.forEach(f=>fwrap.appendChild(renderFilmCard(f)));}
    else{fwrap.innerHTML='<p>No films found. Try another search.</p>'}

    if(res.people.length){res.people.forEach(p=>pwrap.appendChild(renderPersonCard(p)));}
    else{pwrap.innerHTML='<p>No people found. Try another search.</p>'}
  }

  /* =============================================================
     DETAIL MODAL
  ============================================================= */
  const detailBackdrop=document.getElementById('detailBackdrop');
  const detailModal=document.getElementById('detailModal');
  const detailMedia=document.getElementById('detailMedia');
  const detailTitle=document.getElementById('detailTitle');
  const detailMeta=document.getElementById('detailMeta');
  const detailBody=document.getElementById('detailBody');
  const detailRelated=document.getElementById('detailRelated');
  const detailRelatedList=document.getElementById('detailRelatedList');
  const detailClose=document.getElementById('detailClose');

  function openDetail(type,id){
    let obj,meta="",body="",rels=[];
    if(type==='film'){
      obj=films.find(f=>f.id===id);if(!obj)return;
      meta=`${obj.year}${obj.locations?.length?` ‚Ä¢ ${obj.locations.join(', ')}`:''}`;
      body=`<p>${obj.synopsis||''}</p>${renderExternalLinks(obj.links)}`;
      rels=obj.people?.map(pid=>people.find(p=>p.id===pid)).filter(Boolean)||[];
    }else if(type==='person'){
      obj=people.find(p=>p.id===id);if(!obj)return;
      meta=obj.role||"";
      body=`<p>${obj.bio||''}</p>${renderExternalLinks(obj.links)}`;
      rels=obj.films?.map(fid=>films.find(f=>f.id===fid)).filter(Boolean)||[];
    }else{return;}

    detailTitle.textContent=obj.title||obj.name||"";
    detailMeta.textContent=meta;
    detailBody.innerHTML=body;
    detailMedia.innerHTML=obj.image?`<img src="${obj.image}" alt="${obj.title||obj.name}">`:"";

    // Related pills
    detailRelatedList.innerHTML="";
    if(rels.length){
      rels.forEach(r=>{
        const pill=document.createElement('a');
        const rType=r.title?'film':'person';
        pill.href="#";pill.textContent=r.title||r.name;pill.dataset.detailLink=r.id;pill.dataset.type=rType;detailRelatedList.appendChild(pill);
      });
      detailRelated.hidden=false;
    }else{
      detailRelated.hidden=true;
    }

    detailBackdrop.classList.add('active');
    detailBackdrop.setAttribute('aria-hidden','false');
    document.body.style.overflow='hidden';
  }

  function closeDetail(){
    detailBackdrop.classList.remove('active');
    detailBackdrop.setAttribute('aria-hidden','true');
    document.body.style.overflow='';
  }

  detailClose.addEventListener('click',closeDetail);
  detailBackdrop.addEventListener('click',e=>{if(e.target===detailBackdrop)closeDetail();});
  document.addEventListener('keydown',e=>{if(e.key==='Escape')closeDetail();});

  function renderExternalLinks(links){
    if(!links||!links.length) return '';
    return `<p>Links: ${links.map(l=>`<a href="${l.url}" target="_blank" rel="noopener">${l.label}</a>`).join(' | ')}</p>`;
  }

  /* =============================================================
     SEARCH HANDLERS
  ============================================================= */
  const searchInput=document.getElementById('searchInput');
  const searchType=document.getElementById('searchType');
  const searchBtn=document.getElementById('searchBtn');

  function doSearch(){
    const q=searchInput.value;const t=searchType.value;
    if(!q){populateGrids();return;}
    const res=searchData(q,t);
    renderSearchResults(res);
    // Scroll to results top (films)
    document.getElementById('films').scrollIntoView({behavior:'smooth'});
  }
  searchBtn.addEventListener('click',doSearch);
  searchInput.addEventListener('keydown',e=>{if(e.key==='Enter'){e.preventDefault();doSearch();}});

  /* =============================================================
     DELEGATED CLICK HANDLERS FOR DETAIL LINKS
  ============================================================= */
  document.addEventListener('click',e=>{
    const a=e.target.closest('[data-detail-link]');
    if(a){e.preventDefault();openDetail(a.dataset.type,a.dataset.detailLink);}
  });

  /* =============================================================
     CONTACT FORM (client-side demo only)
  ============================================================= */
  document.getElementById('contactForm').addEventListener('submit',function(e){
    e.preventDefault();
    const name=document.getElementById('contactName').value.trim();
    const email=document.getElementById('contactEmail').value.trim();
    const msg=document.getElementById('contactMessage').value.trim();
    const status=document.getElementById('contactStatus');
    if(!name||!email||!msg){status.textContent='Please fill out all required fields.';return;}
    status.textContent='Thanks! We\'ll be in touch.';this.reset();
  });

  /* =============================================================
     MOBILE MENU
  ============================================================= */
  const navToggle=document.getElementById('navToggle');
  const mobileMenu=document.getElementById('mobileMenu');
  const mobileMenuClose=document.getElementById('mobileMenuClose');
  navToggle.addEventListener('click',()=>{mobileMenu.classList.add('active');mobileMenu.setAttribute('aria-hidden','false');});
  mobileMenuClose.addEventListener('click',closeMobileMenu);
  function closeMobileMenu(){mobileMenu.classList.remove('active');mobileMenu.setAttribute('aria-hidden','true');}

  /* =============================================================
     INIT
  ============================================================= */
  document.addEventListener('DOMContentLoaded',()=>{
    populateGrids();
    document.getElementById('copyrightYear').textContent=new Date().getFullYear();
  });
  </script>
</body>
</html>

